<Window x:Class="Something.Prices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Something"
        mc:Ignorable="d"
        Title="Prices" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Pric" SelectionChanged="Pric_SelectionChanged"/>
        <TextBox x:Name="Add" Grid.Row="1"/>
        <Button x:Name="AddPric" Grid.Row="2" Content="Добавить цену" Click="AddPric_Click"/>
        <Button x:Name="DeletePric" Grid.Row="3" Content="Удалить цену" Click="DeletePric_Click"/>
    </Grid>
</Window>
